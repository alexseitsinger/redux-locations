{
  "compilerOptions": {
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "removeComments": true,
    "strictNullChecks": true,
    "sourceMap": true,

    "outDir": "dist",
    "declaration": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "jsx": "preserve",

    "lib": ["dom", "es2015"],
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": {
      "src": ["src"],
      "src/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", ".yalc", "dist", "tests"]
}
