{
  "compilerOptions": {
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "src": ["src"],
      "tests/*": ["tests/*"],
      "src/*": ["src/*"],
      "types": ["index.d.ts"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", ".yalc", "dist"]
}
